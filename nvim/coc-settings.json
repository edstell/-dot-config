{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"args": [
				"-remote=auto"
			],
			"rootPatterns": [
				"main.go",
				"go.mod",
				"README.md",
				"LICENCE"
			],
			"filetypes": [
				"go"
			],
			"settings": {
				"analyses": {
					"fieldalignment" : true,
					"nilness" : true,
					"shadow" : true,
					"unusedparams" : true,
					"unusedwrite" : true
				},
				"staticCheck": true,
				"memoryMode": "DegradeClosed",
				"expandWorkspaceToModule": false
			},
			"requireRootPattern": true,
			"initializationOptions": {
				"deepCompletion": false
			},
			"ignoredRootPaths": [
				"$HOME/src/github.com/monzo/wearedev/"
			]
		},
		"flow": {
			"command": "npx",
			"args": [
				"flow",
				"lsp"
			],
			"filetypes": [
				"javascript",
				"javascriptreact"
			],
			"initializationOptions": {},
			"requireRootPattern": true,
			"settings": {},
			"rootPatterns": [
				".flowconfig"
			]
		}
	},
	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck",
		"javascript": "eslint",
		"javascript.jsx": "eslint"
	},
	"javascript.validate.enable": false,
	"coc.preferences.formatOnSaveFiletypes": [
		"css",
		"markdown",
		"javascript",
		"graphql",
		"yaml",
		"js",
		"golang",
		"html"
	]
}
